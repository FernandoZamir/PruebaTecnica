@{
    @model List<EstudianteViewModel>
}

<div>
    <h1>Estudiantes</h1>
    <div class="mt-3 mb-3">
        <button type="button" class="btn btn-outline-info btn-sm" id="btnCrearEstudiante"
                data-bs-toggle="modal" data-bs-target="#CrearEstudiante">
            <i class="bi bi-journal-plus"></i> Crear
        </button>
    </div>

    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Identificación</th>
                <th>Primer Nombre</th>
                <th>Segundo Nombre</th>
                <th>Primer Apellido</th>
                <th>Segundo Apellido</th>
                <th>Genero</th>
                <th>Fecha Nacimiento</th>
                <th>Tipo Sangre</th>
                <th>Resdidencia</th>
                <th>Telefono representante</th>
                <th>Email</th>
                <th>Estado</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.identificacion</td>
                <td>@item.primerNombre</td>
                <td>@item.segundoNombre</td>
                <td>@item.primerApellido</td>
                <td>@item.segundoApellido</td>
                <td>@(item.genero == true ? "Masculino":"Femenino")</td>
                <td>@item.fechaNacimiento</td>
                <td>@item.tipoSangre</td>
                <td>@item.residencia</td>
                <td>@item.telefonoRepresentante</td>
                <td>@(item.email == "" ? "Sin email de contacto": item.email )</td>
                <td>
                    @if (item.estado == true)
                    {<span class='badge bg-success text-white'>Activo</span> }
                    else
                    { <span class="badge bg-secondary text-white">Inactivo</span>}
                </td>
                @*<td>
            <div class="btn-group">
                <button type="button" class="btn btn-secondary btn-sm">
                    opciones
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Editar</a></li>
                    <li><a class="dropdown-item" href="#">Eliminar</a></li>
                </ul>
            </div>
        </td>*@
            </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="CrearEstudiante" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="mb-3">
                    <label for="Identificacion" class="form-label">Identificación</label>
                    <input type="text" class="form-control" id="IdentificacionInput">
                </div>
                <div class="mb-3">
                    <label for="PrimerNombre" class="form-label">Primer Nombre</label>
                    <input type="text" class="form-control" id="PrimerNombreInput">
                </div>
                <div class="mb-3">
                    <label for="SegundoNombre" class="form-label">Segundo Nombre</label>
                    <input type="text" class="form-control" id="SegundoNombreInput">
                </div>
                <div class="mb-3">
                    <label for="PrimerApellido" class="form-label">Primer Apellido</label>
                    <input type="text" class="form-control" id="PrimerApellidoInput">
                </div>

                <div class="mb-3">
                    <label for="SegundoApellido" class="form-label">Segundo Apellido</label>
                    <input type="text" class="form-control" id="SegundoApellidoInput">
                </div>

                <div class="mb-3">
                    <label for="genero" class="form-label">Genero</label>
                    <select class="form-select  form-control form-select-sm mb-3" id="GeneroInput">
                        <option value="1">Masculino</option>
                        <option value="0">Femenino</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="TipoSangre" class="form-label">Tipo de Sangre</label>
                    <select class="form-select form-control form-select-sm mb-3" id="TipoSangreInput">
                        <option value="1">A+</option>
                        <option value="2">A-</option>
                        <option value="3">B+</option>
                        <option value="4">B-</option>
                        <option value="5">AB+</option>
                        <option value="6">AB-</option>
                        <option value="7">O+</option>
                        <option value="8">O-</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="FechaNacimiento" class="form-label">Fecha Nacimiento</label>
                    <input type="date" class="form-control" id="FechaNacimientoInput">
                </div>

                <div class="mb-3">
                    <label for="Residencia" class="form-label">Residencia</label>
                    <input type="text" class="form-control" id="ResidenciaInput">
                </div>

                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="EmailInput">
                </div>

                <div class="mb-3">
                    <label for="TelefonoRepresenante" class="form-label">Telefono Representante</label>
                    <input type="text" class="form-control" id="TelefonoRepresenanteInput">
                </div>

                <div class="mb-3">
                    <label for="genero" class="form-label">estado</label>
                    <select class="form-select  form-control form-select-sm mb-3" id="EstadoInput">
                        <option value="1">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal" asp-controller="Estudiante" asp-action="Index" id="btnCerrarEstudiante">Cerrar</button>
                <button type="button" class="btn btn-outline-primary btn-sm" id="btnCrearActualizarEstudiante">Crear</button>
            </div>
        </div>
    </div>
</div>