@{
    @model List<MateriaViewModel>
}

<div>
    <h1>Materia</h1>
    <div class="mt-3 mb-3">
        <button type="button" class="btn btn-outline-info btn-sm" id="btnCrearMateria"
                data-bs-toggle="modal" data-bs-target="#CrearMateria">
            <i class="bi bi-journal-plus"></i> Crear
        </button>
    </div>

    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Descripción</th>
                <th>Registro</th>
                <th>Estado</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.titulo</td>
                    <td>@item.descripcion</td>
                    <td>@item.fechaRegistro</td>
                    <td>
                        @if (item.estado == true)
                        {<span class='badge bg-success text-white'>Activo</span> }
                        else
                        { <span class="badge bg-secondary text-white">Inactivo</span>}
                    </td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-secondary btn-sm">
                                opciones
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Editar</a></li>
                                <li><a class="dropdown-item" href="#">Eliminar</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="CrearMateria" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="mb-3">
                    <label for="TituloMateria" class="form-label">Titulo</label>
                    <input type="text" class="form-control" id="TituloInput" placeholder="Sociales">
                </div>
                <div class="mb-3">
                    <label for="DescripcionTextarea1" class="form-label">Descripcion</label>
                    <textarea class="form-control" id="DescripcionTextarea" rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal" asp-controller="Materia" asp-action="Index" id="btnCerrarMateria">Cerrar</button>
                <button type="button" class="btn btn-outline-primary btn-sm" id="btnCrearActualizarMateria">Crear</button>
            </div>
        </div>
    </div>
</div>