@{
    @model List<NotasViewModel>
    //@model List<EstudianteViewModel>
}

<div>
    <h1>Notas</h1>
    <div class="mt-3 mb-3">
        <button type="button" class="btn btn-outline-info btn-sm" id="btnCrearNota"
                data-bs-toggle="modal" data-bs-target="#CrearNota">
            <i class="bi bi-journal-plus"></i> Crear
        </button>
    </div>

    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Descripción</th>
                <th>Registro</th>
                <th>Estado</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.idNota</td>
                <td>@item.idMateria</td>
                <td>@item.idMateria</td>
                <td>@item.nota</td>

            </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="CrearNota" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="mb-3">
                    <label for="idEsdtudiante" class="form-label">ID Estudiante</label>
                    <input type="text" class="form-control" id="idEstudianteInput">
                </div>
                <div class="mb-3">
                    <label for="idMateria" class="form-label">ID Materia</label>
                    <input type="text" class="form-control" id="idMateriaInput">
                </div>
                <div class="mb-3">
                    <label for="nota" class="form-label">Nota</label>
                    <input type="text" class="form-control" id="NotaInput">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal" asp-controller="Nota" asp-action="Index" id="btnCerrarNota">Cerrar</button>
                <button type="button" class="btn btn-outline-primary btn-sm" id="btnCrearActualizarNota">Crear</button>
            </div>
        </div>
    </div>
</div>